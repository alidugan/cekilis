<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical"
	android:layout_gravity="center|fill_vertical">

	<ListView
		android:id="@+id/mainListView1"
		android:layout_weight="1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="10dp"
		android:verticalSpacing="10dp"
		android:horizontalSpacing="10dp"
		android:numColumns="auto_fit"
		android:columnWidth="60dp"
		android:stretchMode="columnWidth"
		android:gravity="center"/>

	<Button
		android:layout_height="wrap_content"
		android:text="Rehberden Seç"
		android:layout_width="match_parent"
		android:id="@+id/mainButtonRehber"/>

	<Button
		android:layout_height="wrap_content"
		android:text="Kişi Ekle"
		android:layout_width="match_parent"
		android:id="@+id/mainButton1"
		android:onClick="onEkleButtonClick"/>

	<Button
		android:layout_height="wrap_content"
		android:text="Çekilişi Yap"
		android:layout_width="match_parent"
		android:id="@+id/mainButton2"/>

	<TextView
		android:text="@string/ithaf"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="14sp"/>

</LinearLayout>

